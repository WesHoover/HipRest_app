<!DOCTYPE html>
<html>
<head>
  <title>hipRest - <%= yield(:title) || "Hipster Nom" %></title>
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

	<div class="container">
		<ul class="nav nav-tabs">
			<li><%= link_to "Home", root_path %></li>
			<% if user_signed_in? %>
				<li><%= link_to current_user.email %></li> 
				<li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
			<% else %>
				<li><%= link_to "Sign up", new_user_registration_path %></li>
				<li><%= link_to "Sign in", user_session_path %></li>
			<% end %>
		</ul>
		
	</div>

		<% if notice %>
		  <p class="alert alert-success"><%= notice %></p>
		<% end %>
		<% if alert %>
		  <p class="alert alert-danger"><%= alert %></p>
		<% end %>


	<%= yield %>

</body>
</html>
